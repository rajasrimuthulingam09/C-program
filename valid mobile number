#include <stdio.h>
#include <string.h>

int main() {
    char mobile[20];
    int i, valid = 1;

    printf("Enter mobile number: ");
    fgets(mobile, sizeof(mobile), stdin);

    mobile[strcspn(mobile, "\n")] = '\0';

    if(strlen(mobile) != 10 || mobile[0] == '0') {
        valid = 0;
    } else {
        for(i = 0; mobile[i] != '\0'; i++) {
            if(mobile[i] < '0' || mobile[i] > '9') {
                valid = 0;
                break;
            }
        }
    }

    if(valid)
        printf("Valid mobile number");
    else
        printf("Invalid mobile number");

    return 0;
}
