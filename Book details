#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    char author[50];
};

int main() {
    struct Book b;

    printf("Enter book ID: ");
    scanf("%d", &b.bookId);

    printf("Enter book title: ");
    scanf("%s", b.title);

    printf("Enter author name: ");
    scanf("%s", b.author);

    printf("\nBook Details:");
    printf("\nBook ID: %d", b.bookId);
    printf("\nTitle: %s", b.title);
    printf("\nAuthor: %s", b.author);

    return 0;
}
