#include <stdio.h>

struct Item {
    int id;
    char name[20];
    int quantity;
    float price;
};

int main() {
    struct Item items[10];
    int n = 0, choice, i, searchId, found;

    do {
        printf("\n\n--- Inventory Management System ---");
        printf("\n1. Add Item");
        printf("\n2. Display Items");
        printf("\n3. Search Item");
        printf("\n4. Update Item");
        printf("\n5. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1: 
            printf("\nEnter Item ID, Name, Quantity, Price: ");
            scanf("%d %s %d %f",
                  &items[n].id,
                  items[n].name,
                  &items[n].quantity,
                  &items[n].price);
            n++;
            break;

        case 2: 
            printf("\nItem Details:");
            for (i = 0; i < n; i++) {
                printf("\nID: %d Name: %s Quantity: %d Price: %.2f",
                       items[i].id,
                       items[i].name,
                       items[i].quantity,
                       items[i].price);
            }
            break;

        case 3: 
            printf("\nEnter Item ID to search: ");
            scanf("%d", &searchId);
            found = 0;

            for (i = 0; i < n; i++) {
                if (items[i].id == searchId) {
                    printf("\nItem Found:");
                    printf("\nID: %d Name: %s Quantity: %d Price: %.2f",
                           items[i].id,
                           items[i].name,
                           items[i].quantity,
                           items[i].price);
                    found = 1;
                    break;
                }
            }
            if (!found)
                printf("\nItem not found.");
            break;

        case 4: 
            printf("\nEnter Item ID to update: ");
            scanf("%d", &searchId);
            found = 0;

            for (i = 0; i < n; i++) {
                if (items[i].id == searchId) {
                    printf("Enter new Name, Quantity, Price: ");
                    scanf("%s %d %f",
                          items[i].name,
                          &items[i].quantity,
                          &items[i].price);
                    printf("\nItem updated successfully.");
                    found = 1;
                    break;
                }
            }
            if (!found)
                printf("\nItem not found.");
            break;

        case 5:
            printf("\nExiting program...");
            break;

        default:
            printf("\nInvalid choice.");
        }

    } while (choice != 5);

    return 0;
}
