#include <stdio.h>

int main() {
    int n, i;
    int arr1[50], arr2[50];

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements of first array:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr1[i]);
    }

    /* Copy elements from first array to second array */
    for (i = 0; i < n; i++) {
        arr2[i] = arr1[i];
    }

    printf("\nElements of first array:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr1[i]);
    }

    printf("\nElements of second array:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr2[i]);
    }

    return 0;
}
