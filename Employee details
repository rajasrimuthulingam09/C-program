#include <stdio.h>

struct Employee {
    int id;
    char name[50];
    float salary;
};

int main() {
    struct Employee e;

    printf("Enter employee id: ");
    scanf("%d", &e.id);

    printf("Enter name: ");
    scanf("%s", e.name);

    printf("Enter salary: ");
    scanf("%f", &e.salary);

    printf("\nEmployee Details:");
    printf("\nID: %d", e.id);
    printf("\nName: %s", e.name);
    printf("\nSalary: %.2f", e.salary);

    return 0;
}
