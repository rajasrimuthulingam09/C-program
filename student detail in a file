#include <stdio.h>

int main() {
    FILE *fp;
    int roll;
    char name[50];
    float marks;

    fp = fopen("student.txt", "w");

    printf("Enter roll number: ");
    scanf("%d", &roll);

    printf("Enter name: ");
    scanf("%s", name);

    printf("Enter marks: ");
    scanf("%f", &marks);

    fprintf(fp, "Roll: %d\nName: %s\nMarks: %.2f\n", roll, name, marks);

    fclose(fp);

    printf("Student details saved successfully.");
    return 0;
}
