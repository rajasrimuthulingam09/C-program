#include <stdio.h>
#include <string.h>

struct Customer {
    int id;
    char name[50];
    char mobile[15];
};

int main() {
    struct Customer c[10];
    int n, i, searchId, found = 0;

    printf("Enter number of customers: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of Customer %d\n", i + 1);

        printf("Customer ID: ");
        scanf("%d", &c[i].id);

        printf("Name: ");
        scanf(" %[^\n]", c[i].name);

        printf("Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for (i = 0; i < n; i++) {
        if (c[i].id == searchId) {
            printf("\nCustomer Found!\n");
            printf("ID: %d\n", c[i].id);
            printf("Name: %s\n", c[i].name);
            printf("Mobile: %s\n", c[i].mobile);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("\nCustomer with ID %d not found.\n", searchId);
    }

    return 0;
}
