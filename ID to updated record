#include <stdio.h>

struct Student {
    int id;
    char name[20];
    int marks;
};

int main() {
    struct Student s[5];
    int i, searchId, found = 0;

    for (i = 0; i < 5; i++) {
        printf("\nEnter ID, Name, Marks for student %d: ", i + 1);
        scanf("%d %s %d", &s[i].id, s[i].name, &s[i].marks);
    }


    printf("\nEnter ID to update record: ");
    scanf("%d", &searchId);

    for (i = 0; i < 5; i++) {
        if (s[i].id == searchId) {
            printf("Enter new Name and Marks: ");
            scanf("%s %d", s[i].name, &s[i].marks);
            found = 1;


            printf("\nUpdated Record:");
            printf("\nID: %d", s[i].id);
            printf("\nName: %s", s[i].name);
            printf("\nMarks: %d\n", s[i].marks);
            break;
        }
    }

    if (!found) {
        printf("\nRecord not found.");
    }

    return 0;
}
