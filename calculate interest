#include <stdio.h>

float calculateInterest(float p, float r, float t) {
    return (p * r * t) / 100;
}

int main() {
    float p, r, t, si;

    printf("Enter principal: ");
    scanf("%f", &p);

    printf("Enter rate of interest: ");
    scanf("%f", &r);

    printf("Enter time (years): ");
    scanf("%f", &t);

    si = calculateInterest(p, r, t);

    printf("Simple Interest = %.2f", si);
    return 0;
}
