#include <stdio.h>

struct Student {
    int id;
    char name[30];
};

int main() {
    struct Student s[50];
    int n, i, newRecords;

    printf("Enter number of existing records: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Name: ");
        scanf(" %[^\n]", s[i].name);
    }

    printf("\nEnter number of new records to add: ");
    scanf("%d", &newRecords);

    for (i = n; i < n + newRecords; i++) {
        printf("\nEnter details of new student %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Name: ");
        scanf(" %[^\n]", s[i].name);
    }

    n = n + newRecords;

    printf("\n--- Updated Student List ---\n");
    for (i = 0; i < n; i++) {
        printf("ID: %d, Name: %s\n", s[i].id, s[i].name);
    }

    return 0;
}
