#include <stdio.h>

float calculateBill(float price, int qty) {
    return price * qty;
}

int main() {
    float price, bill;
    int qty;

    printf("Enter price: ");
    scanf("%f", &price);

    printf("Enter quantity: ");
    scanf("%d", &qty);

    bill = calculateBill(price, qty);

    printf("Total Bill Amount = %.2f", bill);
    return 0;
}
