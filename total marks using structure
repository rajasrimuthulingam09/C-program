#include <stdio.h>

struct Student {
    int roll;
    char name[30];
    int m1, m2, m3;
};

int main() {
    struct Student s;
    int total;

    printf("Enter roll number: ");
    scanf("%d", &s.roll);

    printf("Enter name: ");
    scanf("%s", s.name);

    printf("Enter marks in 3 subjects: ");
    scanf("%d %d %d", &s.m1, &s.m2, &s.m3);

    total = s.m1 + s.m2 + s.m3;

    printf("\nStudent Details:");
    printf("\nRoll No: %d", s.roll);
    printf("\nName: %s", s.name);
    printf("\nTotal Marks: %d", total);

    return 0;
}
